<div class="mx-auto">
  <%= render "intro" %>

  <%= render "today" %>

  <%= render "table" %>

  <div class="notes text-xs text-center text-gray-400 mt-8">
    <p class="text-gray-500 mt-4">
      <em>Last updated on <%= @current_update.updated_at.strftime("%B %e, %Y at %I:%M %p %Z") %></em>
    </p>
    <p class="mt-2">
      <em>Data is pulled from the <a class="underline hover:text-indigo-400" href="https://github.com/nytimes/covid-19-data">The New York Times</a>.</em>
    </p>
  </div>
</div>
