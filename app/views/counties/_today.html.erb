<section class="today mt-12">
  <h3 class="text-lg leading-6 font-medium text-gray-900">
    Today
  </h3>
  <div class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dl>
          <dt class="text-sm leading-5 font-medium text-gray-500 truncate">
            New Cases
          </dt>
          <dd class="mt-1 flex justify-between items-baseline md:block lg:flex">
            <div class="flex items-baseline text-2xl leading-8 font-semibold text-indigo-600">
              <%= number_with_delimiter(@current_update_new_cases) %>

              <span class="ml-2 text-sm leading-5 font-medium text-gray-500">
                from <%= number_with_delimiter(@previous_update_new_cases) %>
              </span>
            </div>

            <% if @current_update.new_cases_growth_rate.present? && @current_update.new_cases_growth_rate < 0 %>
              <div class="inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium leading-5 bg-green-100 text-green-800 md:mt-2 lg:mt-0">
                <svg class="-ml-1 mr-0.5 flex-shrink-0 self-center h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="sr-only">
                  Decreased by
                </span>
                <%=  number_to_percentage(@current_update.new_cases_growth_rate.nil? ? "n/a" : @current_update.new_cases_growth_rate*100, precision: 0, delimiter: ',') %>
              </div>
            <% elsif @current_update.new_cases_growth_rate.present? && @current_update.new_cases_growth_rate > 0 %>
              <div class="inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium leading-5 bg-red-100 text-red-800 md:mt-2 lg:mt-0">
                <svg class="-ml-1 mr-0.5 flex-shrink-0 self-center h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="sr-only">
                  Decreased by
                </span>
                <%=  number_to_percentage(@current_update.new_cases_growth_rate.nil? ? "n/a" : @current_update.new_cases_growth_rate*100, precision: 0, delimiter: ',') %>
              </div>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dl>
          <dt class="text-sm leading-5 font-medium text-gray-500 truncate">
            Total Cases
          </dt>
          <dd class="mt-1 flex justify-between items-baseline md:block lg:flex">
            <div class="flex items-baseline text-2xl leading-8 font-semibold text-indigo-600">
              <%= number_with_delimiter(@current_update_total_cases) %>
              <span class="ml-2 text-sm leading-5 font-medium text-gray-500">
                from <%= number_with_delimiter(@previous_update_total_cases) %>
              </span>
            </div>

            <% if @current_update.total_cases_growth_rate.present? && @current_update.total_cases_growth_rate < 0 %>
              <div class="inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium leading-5 bg-green-100 text-green-800 md:mt-2 lg:mt-0">
                <svg class="-ml-1 mr-0.5 flex-shrink-0 self-center h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="sr-only">
                  Decreased by
                </span>
                <%=  number_to_percentage(@current_update.total_cases_growth_rate.nil? ? "n/a" : @current_update.total_cases_growth_rate*100, precision: 0, delimiter: ',') %>
              </div>
            <% elsif @current_update.total_cases_growth_rate.present? && @current_update.total_cases_growth_rate > 0 %>
              <div class="inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium leading-5 bg-red-100 text-red-800 md:mt-2 lg:mt-0">
                <svg class="-ml-1 mr-0.5 flex-shrink-0 self-center h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="sr-only">
                  Decreased by
                </span>
                <%=  number_to_percentage(@current_update.total_cases_growth_rate.nil? ? "n/a" : @current_update.total_cases_growth_rate*100, precision: 0, delimiter: ',') %>
              </div>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <dl>
          <dt class="text-sm leading-5 font-medium text-gray-500 truncate">
            Total Deaths
          </dt>
          <dd class="mt-1 flex justify-between items-baseline md:block lg:flex">
            <div class="flex items-baseline text-2xl leading-8 font-semibold text-indigo-600">
              <%= number_with_delimiter(@current_update_total_deaths) %>
            </div>

            <div class="inline-flex items-baseline px-2.5 py-0.5 rounded-full text-sm font-medium leading-5 bg-red-100 text-red-800 md:mt-2 lg:mt-0">
              <%=  number_to_percentage(@current_update.average_death_rate.nil? ? "n/a" : @current_update.average_death_rate, precision: 3) %>
            </div>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<section class="source mx-auto max-w-md mt-8 text-xs font-mono text-center">
  <p>Data is pulled every morning at 10am CST from <a target="_blank" class="text-indigo-400" href="https://www.asafenashville.org">Metro Nashville's Covid-19</a> response website.</p>
</section>
