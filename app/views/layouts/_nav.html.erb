<div x-data="{ isOpen: false }" class="relative bg-white">
  <div class="relative py-8 shadow-sm">

    <!-- start Desktop Nav Padding -->
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6">
      <nav class="relative flex items-center justify-between sm:h-10 md:justify-center">
        <div class="flex items-center flex-1 md:absolute md:inset-y-0 md:left-0">
          <div class="flex items-center justify-between w-full md:w-auto">
            <%= link_to 'Covid-19 Tracker', nashville_path, class: "text-xl text-indigo-500 hover:text-indigo-600" %>
            <div class="-mr-2 flex items-center md:hidden">
              <button @click="isOpen = !isOpen" type="button" class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out">
                <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>

          <!-- start Nav Links -->
          <div class="hidden sm:ml-6 sm:flex">
            <% if current_page?(about_path) %>
              <%= link_to 'About', about_path, class: "inline-flex items-center px-1 pt-1 border-b-2 border-indigo-500 font-medium leading-5 text-gray-900 focus:outline-none focus:border-indigo-700 transition duration-150 ease-in-out ml-8"  %>
            <% else %>
              <%= link_to 'About', about_path, class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent font-medium leading-5 text-gray-500 hover:text-gray-700 hover:border-indigo-500 focus:outline-none focus:text-gray-700 focus:border-inigo-500 transition duration-150 ease-in-out ml-8"  %>
            <% end %>

            <% if current_page?(get_involved_path) %>
              <%= link_to 'Get Involved', get_involved_path, class: "inline-flex items-center px-1 pt-1 border-b-2 border-indigo-500 font-medium leading-5 text-gray-900 focus:outline-none focus:border-indigo-700 transition duration-150 ease-in-out ml-8"  %>
            <% else %>
              <%= link_to 'Get Involved', get_involved_path, class: "inline-flex items-center px-1 pt-1 border-b-2 border-transparent font-medium leading-5 text-gray-500 hover:text-gray-700 hover:border-indigo-500 focus:outline-none focus:text-gray-700 focus:border-inigo-500 transition duration-150 ease-in-out ml-8"  %>
            <% end %>

          </div><!-- end Nav Links -->
        </div>

        <div class="hidden md:absolute md:flex md:items-center md:justify-end md:inset-y-0 md:right-0">
          <%= link_to "mailto:leemc@hey.com", class: "hover:no-underline" do %>
            <span class="inline-flex shadow">
              <button type="button" class="inline-flex items-center px-6 py-3 border border-transparent font-heading uppercase tracking-wide text-sm text-gray-500 bg-white hover:text-black hover:no-underline focus:outline-none focus:shadow-outline-indigo-500 active:bg-light_gray active:text-black transition duration-150 ease-in-out">
                Contact
                <svg class="ml-3 -mr-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884zM18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" clip-rule="evenodd"/>
                </svg>
              </button>
            </span>
          <% end %>
        </div><!-- end Nav Action -->
      </nav><!-- end Desktop Nav -->
    </div><!-- end Desktop Nav Padding -->

    <!-- start Mobile Nav -->
    <div x-show="isOpen"
         x-transition:enter="transition ease-out duration-100 transform"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-75 transform"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-95"
         class="absolute z-10 bg-white overflow-hidden top-0 inset-x-0 p-2 transition transform origin-top-right md:hidden">
      <div class="shadow-md">
        <div class="bg-white shadow-xs ">
          <div class="px-5 pt-4 flex items-center justify-between">
            <div>
              <%= link_to 'Covid-19 Tracker', nashville_path, class: "text-xl text-indigo-500 hover:text-indigo-600" %>
            </div>
            <div class="-mr-2">
              <button @click="isOpen = !isOpen" type="button" class="inline-flex items-center justify-center p-2 text-charcoal hover:text-charcoal hover:bg-light_gray focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out">
                <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          </div>
          <nav class="px-2 pt-2 pb-3 text-sm">
            <%= link_to "About", about_path,
                  class: "block px-3 py-2 text-charcoal font-heading uppercase tracking-wide hover:text-gray-900 hover:bg-light_gray no-underline focus:outline-none focus:text-charcoal focus:bg-light_gray transition duration-150 ease-in-out" %>

            <%= link_to "Get Involved", get_involved_path,
                  class: "mt-1 block px-3 py-2 text-charcoal font-heading uppercase tracking-wide hover:text-gray-900 hover:bg-light_gray no-underline focus:outline-none focus:text-charcoal focus:bg-light_gray transition duration-150 ease-in-out" %>
          </nav>
          <div>
            <%= link_to "mailto:leemc@hey.com", class: "inline-flex no-underline items-center w-full px-5 py-3 border border-transparent font-heading uppercase tracking-wide text-indigo-500 bg-light_gray hover:text-black focus:outline-none focus:shadow-outline-indigo-500 active:bg-light_gray active:text-black transition duration-150 ease-in-out" do %>
              Contact
              <svg class="ml-3 -mr-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884zM18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" clip-rule="evenodd"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div><!-- end Mobile Nav -->

  </div><!-- end Nav Padding -->
</div><!-- end Nav Wrapper -->
